# 生产环境变量配置示例
# 复制此文件为 .env 并填入实际值

# ===== 服务器配置 =====
HOST=0.0.0.0
PORT=8080
RUST_LOG=info
MAX_WORKERS=10
TIMEOUT_SECONDS=30

# ===== 数据库配置 =====
DATABASE_URL=postgres://stockuser:stockpass@postgres:5432/stock_analyzer
DATABASE_MAX_CONNECTIONS=10
DATABASE_ENABLE_MIGRATIONS=true

# ===== AKShare服务配置 =====
AKSERVICE_URL=http://akshare-service:5000
AKSERVICE_TIMEOUT=30

# ===== 分析参数配置 =====
TECHNICAL_WEIGHT=0.5
FUNDAMENTAL_WEIGHT=0.3
SENTIMENT_WEIGHT=0.2
TECHNICAL_PERIOD=60
SENTIMENT_PERIOD=30

# ===== AI服务配置 =====
AI_PROVIDER=openai
AI_API_KEY=your-openai-api-key-here
AI_MODEL=gpt-4
AI_ENABLED=true
AI_TIMEOUT=60

# 可选的AI提供商配置
# AI_BASE_URL=https://api.openai.com/v1

# ===== 缓存配置 =====
CACHE_ENABLED=true
CACHE_PRICE_TTL=300
CACHE_FUNDAMENTAL_TTL=3600
CACHE_NEWS_TTL=1800
CACHE_STOCK_NAME_TTL=86400
CACHE_MAX_ENTRIES=1000

# ===== 认证配置 =====
AUTH_ENABLED=false
AUTH_SECRET_KEY=your-secret-key-change-this-in-production
SESSION_TIMEOUT=86400
BCRYPT_COST=12


# ===== 监控和日志 =====
ENABLE_METRICS=true
LOG_LEVEL=info
ACCESS_LOG_ENABLED=true

# ===== 安全配置 =====
CORS_ENABLED=true
CORS_ORIGINS=*
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# ===== SSL配置 =====
SSL_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=